{% extends '::base.html.twig' %}

{% block body %}

    {% verbatim %}
    <div data-ng-app="libraryApp" class="library-app">
        <h1>Авторы</h1>
        <div data-ng-controller="AuthorListCtrl">
            <div infinite-scroll="loadAuthors()" infinite-scroll-distance="3">
                <ul class="author-container">
                    <li data-ng-repeat="author in authors" class="author-item">
                        <h3>{{author.name}}</h3>
                        <p>{{author.description}}</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {% endverbatim %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular-resource.js"></script>

    {% javascripts '@LibraryBundle/Resources/public/vendor/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% javascripts '@LibraryBundle/Resources/public/js/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@LibraryBundle/Resources/public/css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

